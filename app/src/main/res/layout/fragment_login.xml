<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginParent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".files.login.LoginFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/loginEmailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/loginEmailExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/ic_perm_identity_black_48dp"
        app:mtf_labelColor="@color/colorPrimary"
        >
    <EditText
        android:id="@+id/loginEmailInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble"
        android:textColor="@color/text"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />
    </com.github.florent37.materialtextfield.MaterialTextField></android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/loginPassInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.github.florent37.materialtextfield.MaterialTextField
        android:id="@+id/loginPassExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mtf_image="@drawable/ic_vpn_key_black_48dp"
        app:mtf_labelColor="@color/colorPrimary"
        >
    <EditText
        android:id="@+id/loginPassInputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble"
        android:textColor="@color/text"
        android:hint="@string/password"
        android:inputType="textPassword" />
    </com.github.florent37.materialtextfield.MaterialTextField></android.support.design.widget.TextInputLayout>
    <com.github.jorgecastilloprz.FABProgressCircle
        android:layout_gravity="center_horizontal"
        android:id="@+id/loginFabProgressCircle"
        android:layout_marginTop="92dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        app:arcColor="#FF5722"
        app:arcWidth="2dp"
        app:finalIcon="@drawable/ic_done"
        android:scaleY="1.5"
        app:roundedStroke="true"
        >
    <io.saeid.fabloading.LoadingView
        android:layout_gravity="center_horizontal"
        android:id="@+id/loginbuttonview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1"
        android:scaleY="1"
        app:mfl_onclickLoading="true"
        app:mfl_duration="200"
        />
</com.github.jorgecastilloprz.FABProgressCircle>
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"/>
    </LinearLayout>

</LinearLayout>
